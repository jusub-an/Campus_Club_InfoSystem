<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.FileMapper">

    <insert id="insert">
        INSERT INTO post_file (
            file_id,
            post_id,
            file_name,
            storage_path
        )
        VALUES (
            seq_file.nextval,  
            #{post_id},
            #{file_name},
            #{storage_path}
        )
    </insert>
    
    <select id="findByPostId" resultType="org.zerock.domain.FileVO">
        SELECT * FROM post_file 
        WHERE post_id = #{post_id}
    </select>
    
    <select id="getFile" resultType="org.zerock.domain.FileVO">
        SELECT * FROM post_file 
        WHERE file_id = #{file_id}
    </select>
    
    <delete id="delete">
        DELETE FROM post_file 
        WHERE file_id = #{file_id}
    </delete>

</mapper>